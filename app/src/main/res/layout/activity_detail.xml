<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/photo_received"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="28dp"
                android:gravity="center_horizontal"
                android:src="@drawable/sagaras" />
            <TextView
                android:id="@+id/judul_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/buku_name"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/author_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/buku_author"
                android:textSize="19sp"
                />
            <TextView
                android:id="@+id/sinopsis_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sinopsis"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>